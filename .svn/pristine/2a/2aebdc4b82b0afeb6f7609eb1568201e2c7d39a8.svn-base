body{margin:0;padding:0;font-family: arial;font-size: 13px; }
.header{
    background-color: #009fe3;
    padding: 12px;
    color: white;
}
.header i{color: white;padding-right: 15px;}
.title i{color: white;font-size: 18px;margin-top: -3px;}
#Details{
    box-shadow: 0px 0px 2px gray;
    margin: 8px;
}
.title{
    background-color: #01395a;
    color: white;
    padding: 10px;
    font-size: 12px;
}
.info{
    
    padding: 12px 7px;
}
#professionalInfo{
	display: none;
}
.grid{
    display: grid;
    grid-template-columns: 48% 48%;
    grid-gap: 13px;
    color: gray;
}
.grid div{
    padding: 0;
    height: 25px;
    margin-top: 5px;
    position: relative;
    border-bottom: 1px solid gray;
}
i{color: gray;}
input[type="text"],input[type="number"],input[type="email"]{
    float: left;
    width: 85%;
    border: none;
    padding: 4px 2px;
    background-color: transparent;
}
input[type="checkbox"]{vertical-align: middle;}
input:focus,select:focus{outline: none;}
select{
	width: 97%;
	border: none;
	border-bottom: 1px solid gray;
	margin: 5px;
}
.row{
	display: grid;
	margin-top: 9px;
	padding-bottom: 6px;
	grid-gap: 6px;
}
.row div{
	padding: 10px 2px 0px;
	border-bottom: 1px solid gray;
	position: relative;
}
.grid input[type="radio"]{width: auto;visibility: hidden;}
.grid .gender{width: 80%;margin: auto;margin-top: -10px;}
.grid .gender .male,.grid .gender .female{
    border: 2px solid gray;
    border-radius: 3px;
    margin: 0px auto;
    padding: 2px;
    text-align: center;
    height: auto;
    margin-top: -15px;
}
.gender input[type="radio"]:checked + div.male{
  border: 2px solid #0180b7;
  color: #0180b7;
}
.gender input[type="radio"]:checked + div.female{
  border: 2px solid #0180b7;
  color: #0180b7;
}
input[type="date"]{width: 90%;border: none;position: relative;padding: 2px;}
input[type="date"]::-webkit-calendar-picker-indicator {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: auto;
    height: auto;
    color: transparent;
    background: transparent;width: 100%;
}
.place {position: relative !important;}
input[value="0000-00-00"]::-webkit-datetime-edit {
     color: transparent; 
}
.button{margin: 5px 8px;text-align: center;font-size: 14px;cursor: pointer;background-color: #01395a;color: white;padding: 10px;}
.error{color: red;font-size: 10px;margin-top: -10px;}

.info label{font-size: 11px;position: absolute;top: 3px;left: 2px;}
.row label{top: 15px;left: 2px;color: gray;}
.row input{border: none;}
.grid label{/* position: relative; */}
.grid .gender label{position: relative;}
.txt{top: -11px !important;}
.row .txt{top: 0px !important;}
#professionalInfo .row div,#professionalInfo .grid div{border: none;height: auto;margin-top: 0;}
#professionalInfo .row{margin-top: 0;}
#professionalInfo {padding: 7px;}
.Error_Cls {border-bottom: 1px solid red !important;}